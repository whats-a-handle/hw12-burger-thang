<div class="text-center">
<h1>Burgers!</h1>
</div>
<div class="container text-center">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class=" container input-group text-center">
    <span class="input-group-addon" id="basic-addon1"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></span>
    <input type="text" id="burg" name="name" class="form-control" placeholder="Burger Name" aria-describedby="basic-addon1">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input  type="radio" name="devoured" value="1" checked> <span class="radio-text">Devoured!</span><br>
    <input type="radio" name="devoured" value="0"> <span class="radio-text">Not Devoured!</span>
  </div>

  <a role="button" type="submit" class="btn btn-primary">Submit</a>
</form>
</div>



<div class="container text-center">
  <div class="row">
  <div class="col-sm-6 not-devoured">
  <h2>Burgers that are not devoured!</h2>
  <ul>
    {{#each burgers}}
      {{#unless devoured}}
     
        {{> burgers/burger-block devoured=true}}
      {{/unless}}
    {{/each}}
  </ul>
  </div>

  <div class="col-sm-6 devoured">
  <h2>Burgers that are devoured!</h2>
  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/if}}
    {{/each}}
  </ul>
  </div>
  </div>
</container>


